{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "tests/**/*",
    "config/**/*",
    "utils/**/*",
    "fixtures/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "reports"
  ]
}
